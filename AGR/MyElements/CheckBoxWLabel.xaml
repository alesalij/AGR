<UserControl x:Class="AGR.CheckBoxWLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AGR"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <CheckBox Name="ChBox" ClickMode="Press" Tag=""/>

        <TextBlock Name="TBlock" TextWrapping="Wrap" Text="TextBlock" Grid.Column="1" Width="Auto" Margin="0,0,134,0" TextAlignment="Left" VerticalAlignment="Center" Tag=""/>
        
    </Grid>
</UserControl>
